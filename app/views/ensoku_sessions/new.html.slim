- content_for :title
div.main-wrapper.main-bg
  div.main-inner-text
    = image_tag "logo_transparent.png", size: '300x300'
    h1.mb-3.font-weight-normal = t('.title')
    div.mt-3 = link_to t('.new'), ensoku_sessions_path, method: :post, class: 'btn btn-outline-light btn-lg'
    - if session[:oyatsus].present?
      div.mt-3 = link_to t('.continue'), oyatsus_path, class: 'btn btn-outline-light btn-lg'
    - if logged_in? && current_user.ensokus.present?
      div.mt-3 = link_to t('.index'), ensokus_path, class: 'btn btn-outline-light btn-lg'
    div.mt-5 = render 'shared/how_to_play'
